<?xml version="1.0"?>
<ruleset name="Magento 2 Coding Standard">
    <description>Magento 2 Coding Standard</description>

    <!-- Override file extensions for analysis. -->
    <rule ref="/extensions-override.xml" />

    <!-- Include all sniffs in the Magento2 standard. -->
    <rule ref="Magento2">
        <exclude name="Magento2.Annotation.MethodAnnotationStructure" />
        <exclude name="Magento2.Annotation.MethodArguments.NoCommentBlock" />
    </rule>

    <!-- Include ObjectManager sniffs in the MEQP2 standard. -->
    <rule ref="MEQP2" />

    <rule ref="Generic.Files.LineLength">
        <exclude-pattern>*\.phtml$</exclude-pattern>
        <exclude-pattern>*\.xml$</exclude-pattern>
    </rule>
</ruleset>
